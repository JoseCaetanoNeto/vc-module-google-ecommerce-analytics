<script src="/Electronics/en-US/themes/assets/gtm.js" type="text/javascript"></script>
{% case template %}
{% when 'index' %}
<script>
dataLayer.push({
  'ecommerce': {
    'currencyCode': '{{current_currency.code}}',
    'impressions': [
      {% for product in collection.products %}{
        'name': '{{product.title}}',
        'id': '{{product.id}}',
        'price': '{{ product.price_with_tax  | divided_by: 100 | replace: ',', '.' }}',
        'brand': '{{ product.vendor }}',
        'list': 'Home page',
        'position': {{ forloop.index }}
      },
      {% endfor %}
    ]
  }
});
</script>
{% when 'collection' %}
<script>
dataLayer.push({
  'ecommerce': {
    'currencyCode': '{{current_currency.code}}',
    'impressions': [
      {% for product in collection.products %}{
        'name': '{{product.title}}',
        'id': '{{product.id}}',
        'price': '{{ product.price_with_tax | divided_by: 100 | replace: ',', '.' }}',
        'brand': '{{ product.vendor }}',
        'category': '{{ collection.title }}',
        'list': 'Category {{ collection.title }}',
        'position': {{ forloop.index }}
      },
      {% endfor %}
    ]
  }
});
</script>
{% when 'search' %}
<script>
dataLayer.push({
  'ecommerce': {
    'currencyCode': '{{current_currency.code}}',
    'impressions': [
      {% for product in collection.products %}{
        'name': '{{product.title}}',
        'id': '{{product.id}}',
        'price': '{{ product.price_with_tax  | divided_by: 100 | replace: ',', '.' }}',
        'brand': '{{ product.vendor }}',
        'list': 'Search Results',
        'position': {{ forloop.index }}
      },
      {% endfor %}
    ]
  }
});
</script>
{% when 'cart' %}
<!-- {{template}} page-->
{% when 'checkout' %}
<!-- {{template}} page-->
{% when 'thanks' %}
<script>
  dataLayer.push({
    'ecommerce': {
      'currencyCode': '{{ current_currency.code }}',
      'purchase': {
        'actionField': {
          'id': '{{ order.order_number  }}',
          'affiliation': '{{ shop.name }}',
          'revenue': '{{ order.total_price | divided_by: 100  | replace: ',', '.' }}',
          {% if order.tax_price > 0 %}'tax':'{{ order.tax_price | divided_by: 100 | replace: ',', '.' }}',{% endif %}
          {% if order.shipping_price > 0 %}'shipping': '{{ order.shipping_price | divided_by: 100 | replace: ',', '.' }}',{% endif %}
        },
        'products': [
          {% for item in order.line_items %}{
            'name': '{{item.title}}',
            'id': '{{ item.product_id }}',
            'price': '{{ item.price | divided_by: 100 | replace: ',', '.' }}',
            'quantity': {{ item.quantity }}},
          {% endfor %}]
      }
    }
  });
</script>
{% when 'product' %}
<script>
dataLayer.push({
  'ecommerce': {
    'currencyCode': '{{current_currency.code}}',
    'detail': {
      'products': [{
      'name': '{{product.title}}',
      'id': '{{product.id}}',
      'price': '{{ product.price_with_tax  | divided_by: 100 | replace: ',', '.' }}',
      'brand': '{{ product.vendor }}',
      'category': '{{ collection.title }}'}]
    }
  }
});
</script>
{% endcase %}
{% endif %}